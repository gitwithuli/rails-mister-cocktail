<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Create a new cocktail</h1>

      <%= simple_form_for @cocktail, html: { autocomplete: 'off' } do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, class: 'btn btn-warning' %>
      <% end %>
      <p class="link"><%= link_to "Cancel", root_path, class: "btn btn-danger m-2" %></p>
    </div>
  </div>
</div>
